{% extends 'base.html.twig' %}

{% block body %}

<div class="row">

    <div class="col-md-10 offset-1">
        {# offset decalage de colone. #}

        <h2 class="my-4">Identification</h2>

        <form action="{{ path('login') }}" method="post">

            <div class="form-group">

                <input type="text" class="form-control" required name="_username" placeholder="Tapé « Nemzag ».">
                {# obligatoire de utiliser _username. #}
                {# pash de la label donc on utilise placeholder. #}

            </div>

            <div class="form-group">

                <input type="password" class="form-control" required name="_password" placeholder="Tapé « password ».">

            </div>

            <div class="form-group">

                <button type="submit" class="btn btn-primary">Connexion</button>

            </div>

        </form>

    </div>
</div>

{% endblock %}